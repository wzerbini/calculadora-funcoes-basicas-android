<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070707"
    android:onClick="clicaBotao"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/botaoClear"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#66bedf"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="C"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botaoDivide"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="0"
            android:layout_column="3"
            android:background="#ffac37"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="รท"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="7"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="8"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="9"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botaoMultiplica"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="1"
            android:layout_column="3"
            android:background="#ffac37"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="x"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="0"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="4"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="5"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="2"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="6"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botaoSubtrai"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="2"
            android:layout_column="3"
            android:background="#ffac37"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="-"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="0"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="1"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="1"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="2"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="2"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="3"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botaoSoma"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="3"
            android:layout_column="3"
            android:background="#ffac37"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="+"
            android:textColor="#FF9800"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botao0"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="0"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="0"
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button19"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="2"
            android:backgroundTint="#000000"
            android:onClick="clicaBotao"
            android:text="."
            android:textColor="#DAD9D9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/botaoIgual"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_row="4"
            android:layout_column="3"
            android:background="#FF9800"
            android:onClick="clicaBotao"
            android:text="="
            android:textColor="#DDDDDD"
            android:textSize="30sp" />
    </GridLayout>

    <TextView
        android:id="@+id/campoResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_alignEnd="@+id/gridLayout"
        android:layout_alignRight="@+id/gridLayout"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/background_material_light"
        android:textSize="50dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>